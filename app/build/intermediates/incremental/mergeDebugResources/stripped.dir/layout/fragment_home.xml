<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                             
    
                                                                
                 
                                
                                                                          
           
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent" android:tag="layout/fragment_home_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.main.fragment.home.home.HomeFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_below="@+id/carouselView"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_height="50dp"
                android:src="@drawable/books" />
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_alignParentTop="true"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_below="@+id/ivLogo"
                android:text="BOOKS"
                android:textColor="#f79f1b"
                android:textStyle="bold"
                android:gravity="start"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"/>
        <TextView
            android:id="@+id/tvTitleTopBooks"
            android:layout_width="match_parent"
            android:layout_below="@+id/rv"
            android:text="TOP VIEWS"
            android:textColor="#f79f1b"
            android:textStyle="bold"
            android:gravity="start"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleTopBooks"/>
        </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
         
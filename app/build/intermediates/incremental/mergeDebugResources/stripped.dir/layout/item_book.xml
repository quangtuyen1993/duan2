<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                                                  

                                                                    

                 
                       
                                                   
           

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#f79f1b"
        app:cardElevation="3dp" android:tag="layout/item_book_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_margin="12dp"
                    android:tag="binding_1"                         
                                                
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_name"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:lineHeight="20dp"
                    android:lines="2"
                    android:minLines="2"
                    android:tag="binding_2"         
                    android:textColor="#f79f1b" />

                <TextView
                    android:textColor="#f79f1b"
                    android:id="@+id/tv_chapters"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chapter"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:tag="binding_3"                                                                                              
                />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#f79f1b"
                    android:textSize="14sp"
                    android:id="@+id/tv_dateUpdate"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DateUpdate"
                    android:lineHeight="18sp"
                    android:tag="binding_4"                                                              
              />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
         
<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                                               

                                                                    

                 
                             
                                                                           
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ui.booktitle.BookTitleActivity" android:tag="layout/activity_book_title_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/comic"
                    android:text="Hello word"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.appcompat.widget.Toolbar
                        style="@style/ToolbarColoredBackArrow"
                        app:popupTheme="@style/Theme.AppCompat.NoActionBar"
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:tag="binding_1"               
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:civ_border_color="#f79f1b"
                        app:civ_border_width="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.5" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linearDev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:tag="binding_2"                   
                        android:textColor="#f7a71b"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/tv_author"
                        style="@style/textContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_dark"
                        android:tag="binding_3"                                    />

                    <TextView
                        android:id="@+id/tv_state"
                        style="@style/textContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="binding_4"                               
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/tv_chapters"
                        style="@style/textContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="binding_5"                                  
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/tv_dateCreate"
                        style="@style/textContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="binding_6"                                                                       
                        android:textColor="@android:color/background_dark"
                        />

                    <TextView
                        android:id="@+id/tv_dateUpdate"
                        style="@style/textContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="binding_7"                                                                        
                        android:textColor="@android:color/background_dark"
                        />

                    <Button
                        android:id="@+id/bt_readBook"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:tag="binding_8"                                                
                        android:text="Reading Books"
                        android:background="#f7a71b"
                        android:textColor="@android:color/white" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearDev">


                    <TextView
                        android:id="@+id/tv_bookType"
                        style="@style/textContent"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="binding_9"                                               
                        android:textColor="@android:color/background_dark"
                        />

                    <TextView
                        android:id="@+id/tv_translator"
                        style="@style/textContent"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="binding_10"                                       
                        android:textColor="@android:color/background_dark"
                        />

                    <TextView
                        android:id="@+id/tv_description"
                        style="@style/textContent"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tag="binding_11"                            
                        android:textColor="@android:color/background_dark"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
         
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>o

    </style>

    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryVariant">#673AB7</item>
        <item name="colorOnPrimary">#D1C4E9</item>
        <item name="colorSecondary">#7C4DFF</item>
        <item name="colorSecondaryVariant">#212121</item>
        <item name="colorOnSecondary">#757575</item>
        <item name="colorOnSurface">#512DA8</item>
        <item name="colorOnBackground">#BDBDBD</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="textView">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="textContent">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:color">@color/accent</item>
    </style>

    <style name="buttonApp" parent="Widget.MaterialComponents.Button.TextButton.Dialog">

    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="textTitle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
